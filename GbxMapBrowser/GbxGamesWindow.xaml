<Window x:Class="GbxMapBrowser.GbxGamesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GbxMapBrowser"
        mc:Ignorable="d"
        Title="Configure Gbx Games" Height="500" Width="650" Closing="Window_Closing" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition MinWidth="200"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto" MinHeight="50"/>
        </Grid.RowDefinitions>

        <ListView x:Name="listView" ItemsSource="{Binding GbxGames}" MouseDoubleClick="listView_MouseDoubleClick" >
            <!--GbxGame Item Template-->
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Height="80" ToolTip="{Binding InstalationFolder}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" Grid.Column="1">
                            <Label Style="{StaticResource DefaultUIStyle}" FontSize="20" FontWeight="Bold" Content="{Binding Name}"/>
                            <Label Style="{StaticResource DefaultUIStyle}" FontWeight="Light" Content="Enabled: " Padding="10 0 0 0"/>
                            <Label Style="{StaticResource DefaultUIStyle}" FontWeight="Light" Content="{Binding IsEnabled}" Padding="0"/>
                        </StackPanel>
                        <Label Grid.Column="1" Grid.Row="1" Style="{StaticResource DefaultUIStyle}" FontWeight="Light" Content="{Binding InstalationFolder}"/>
                        <Image Grid.RowSpan="2" Source="{Binding Icon}"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
            <!--GbxGame Item Template END-->
        </ListView>
        
        
             <!--Add custom game-->
        <Button x:Name="addCustomGameButton" Style="{x:Null}" Grid.Row="1" Margin="5" Background="Black" Click="addCustomGameButton_Click" >
            <Label Style="{StaticResource DefaultUIStyle}">Need something else? Add it!</Label>
        </Button>

        <Button Margin="5" Grid.Column="1" Grid.Row="1" Style="{x:Null}" Background="{DynamicResource MahApps.Brushes.AccentBase}" Click="ButtonSaveAllChanges_Click">
            <Label Style="{StaticResource DefaultUIStyle}">Save All Changes</Label>
        </Button>
        
        <!--GbxGame Settings Panel-->
        <StackPanel Grid.Column="1">
            <Label Style="{StaticResource DefaultUIStyle}" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Content="{Binding SelectedItem.Name, ElementName=listView, FallbackValue='Choose a game'}"/>
            <Button Margin="5" Click="ButtonChangeInstallLocation_Click" Style="{x:Null}" Background="Black">
                <Label Style="{StaticResource DefaultUIStyle}">Change Install Location</Label>
            </Button>
            <Button Margin="5" Style="{x:Null}" Background="Black" Click="ButtonResetInstallLocation_Click">
                <Label Style="{StaticResource DefaultUIStyle}">Reset Install Location</Label>
            </Button>

            <CheckBox Margin="5" VerticalContentAlignment="Center" IsChecked="{Binding SelectedItem.IsEnabled, ElementName=listView}">
                <Label Style="{StaticResource DefaultUIStyle}" Content="Enable this game"/>
            </CheckBox>
        </StackPanel>
    </Grid>
</Window>
