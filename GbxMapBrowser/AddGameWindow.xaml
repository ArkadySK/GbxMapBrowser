<Window x:Class="GbxMapBrowser.AddGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GbxMapBrowser"
        mc:Ignorable="d"
        Title="Add a Game..." Width="400" SizeToContent="Height">
    <Grid Margin="5" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Label>Game Name:</Label>
        <TextBox x:Name="nameTextBox" Grid.Column="1"/>

        <Button Grid.Row="1" Grid.Column="1" Margin="5" Click="Button_Click" Style="{x:Null}" Background="{DynamicResource MahApps.Brushes.AccentBase}">
            <Label Style="{StaticResource DefaultUIStyle}">OK</Label>
        </Button>
    </Grid>
</Window>
