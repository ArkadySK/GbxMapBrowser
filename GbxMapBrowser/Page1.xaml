<Page x:Class="GbxMapBrowser.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GbxMapBrowser"
      mc:Ignorable="d" 
      d:DesignWidth="250"
      Title="Page1">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <Label Padding="0" Content="Old Name"/>
            <TextBox x:Name="oldNameTextBox"/>
            <Label Padding="0" Content="New Name"/>
            <TextBox x:Name="newNameTextBox"/>
        </StackPanel>
        <Button BorderThickness="1" Grid.Row="1" Content="Ok" Height="30" Width="120" Margin="5" FontSize="15" Background="{DynamicResource MahApps.Brushes.AccentBase}" BorderBrush="{DynamicResource MahApps.Brushes.Button.Flat.Background}" Foreground="{DynamicResource MahApps.Brushes.Button.AccentedSquare.Foreground.MouseOver}">
            <Button.Resources>
                <ResourceDictionary Source="/PresentationFramework.Aero2;component/themes/Aero2.NormalColor.xaml"/>
            </Button.Resources>
        </Button>
    </Grid>
</Page>
